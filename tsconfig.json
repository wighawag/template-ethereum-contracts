/* Based on https://github.com/tsconfig/bases/blob/501da2bcd640cf95c95805783e1012b992338f28/bases/node22.json */
{
	"compilerOptions": {
		"lib": ["ESNext"],
		"module": "NodeNext",
		"target": "ESNext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "nodenext",
		"resolveJsonModule": true,
		"outDir": "dist",
		"paths": {
			"@rocketh": ["./rocketh.ts"],
			"@generated/*": ["./generated/*"]
		}
	}
}
