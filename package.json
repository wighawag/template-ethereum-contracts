{
	"name": "template-ethereum-contracts",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"exports": {
		"./deployments/*": "./deployments/*",
		"./artifacts/*": "./generated/artifacts/*",
		"./abis/*": "./generated/abis/*"
	},
	"files": [
		"dist",
		"deployments",
		"generated"
	],
	"devDependencies": {
		"@nomicfoundation/hardhat-keystore": "^3.0.1",
		"@nomicfoundation/hardhat-network-helpers": "^3.0.0",
		"@nomicfoundation/hardhat-node-test-runner": "^3.0.3",
		"@nomicfoundation/hardhat-viem": "^3.0.0",
		"@rocketh/deploy": "^0.15.1",
		"@rocketh/doc": "^0.15.5",
		"@rocketh/export": "^0.15.5",
		"@rocketh/proxy": "^0.15.2",
		"@rocketh/read-execute": "^0.15.1",
		"@rocketh/router": "^0.15.6",
		"@rocketh/signer": "^0.15.0",
		"@rocketh/verifier": "^0.15.8",
		"@rocketh/viem": "^0.15.0",
		"@slippy-lint/slippy": "^0.1.3",
		"@types/node": "^24.5.2",
		"as-soon": "^0.0.11",
		"earl": "^1.3.0",
		"forge-std": "github:foundry-rs/forge-std#v1.9.4",
		"hardhat": "^3.0.6",
		"hardhat-deploy": "^2.0.0-next.52",
		"ldenv": "^0.3.14",
		"prettier": "^3.6.2",
		"prettier-plugin-solidity": "^2.1.0",
		"rocketh": "^0.15.5",
		"set-defaults": "^0.0.5",
		"tsx": "^4.20.6",
		"typescript": "^5.9.2",
		"viem": "^2.37.8",
		"wait-on": "^9.0.1",
		"zellij-launcher": "^0.0.1"
	},
	"imports": {
		"#rocketh": "./rocketh.js",
		"#generated/*.js": "./generated/*.js"
	},
	"scripts": {
		"prepare": "set-defaults .vscode && pnpm compile",
		"---------------------- DEV ---------------------- ": "",
		"local_node": "hardhat node",
		"compile": "hardhat compile",
		"compile:watch": "as-soon -w src pnpm compile",
		"fork:execute": "ldenv tsx @=HARDHAT_FORK=@@MODE @@",
		"fork:deploy": "pnpm compile --build-profile production && ldenv hardhat @=HARDHAT_FORK=@@MODE deploy @@",
		"deploy:dev": "ldenv -d localhost hardhat --network @@MODE deploy --skip-prompts @@",
		"deploy:watch": "wait-on ./generated && ldenv -m localhost as-soon -w generated -w deploy pnpm run deploy:dev @@MODE @@",
		"test": "hardhat test",
		"test:watch": "wait-on ./generated && as-soon -w generated -w test hardhat test --no-compile",
		"format:check": "prettier --check .",
		"format": "prettier --write .",
		"lint": "slippy src/**/*.sol",
		"---------------------- PRODUCTION ---------------------- ": "",
		"docgen": "ldenv -m hardhat pnpm run deploy hardhat --save-deployments true --skip-prompts ~~ pnpm rocketh-doc -e @@MODE --except-suffix _Implementation,_Proxy,_Router,_Route ~~ @@",
		"execute": "ldenv -n HARDHAT_NETWORK tsx @@",
		"deploy": "pnpm compile --build-profile production && ldenv hardhat --network @@MODE deploy @@",
		"verify": "ldenv rocketh-verify -e @@MODE @@",
		"export": "ldenv rocketh-export -e @@MODE @@",
		"---------------------- START ---------------------- ": "",
		"stop": "zellij kill-session $npm_package_name",
		"start": "zellij-launcher a $npm_package_name || zellij -n zellij.kdl -s $npm_package_name"
	}
}
